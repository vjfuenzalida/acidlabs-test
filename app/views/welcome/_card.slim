- title = "#{city[:name]} (#{city[:country]})"
- coords = "(#{city[:latitude]}, #{city[:longitude]})"
- if forecast
  - temp = "Temperature: #{forecast[:temperature]} ÂºC"
  - day = forecast[:date].strftime("%A, %B %e, %Y")
  - hour = forecast[:date].strftime("%I:%M:%S %p")
- else
  - temp = "Temperature: -"
  - day = "Day: -"
  - hour = "Hour: -"

.card.text-center[class='border-info']
  .card-body  
    h4.text-center.card-title = title    
    p.card-text = coords
    ul.list-group.list-group-flush
      li.list-group-item[class="temp-#{city[:name]}"] = temp
      li.list-group-item[class="day-#{city[:name]}"] = day
      li.list-group-item[class="hour-#{city[:name]}"] = hour
